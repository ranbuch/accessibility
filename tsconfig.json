{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
	  "module": "nodenext",
    "target": "ESNext",
    "declaration": true,
	  "resolveJsonModule": true,
	  "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [ "ESNext" , "dom" ],
    "baseUrl": "./"
  },
  "include": [
    "src/**/*"
  ]
}